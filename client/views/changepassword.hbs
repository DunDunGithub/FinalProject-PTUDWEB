<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change password</title>
    <link rel="icon" href=" /img/logo_has_color.png" type="image/x-icon">
    <script src="https://kit.fontawesome.com/6501cf2109.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href=" /css/base.css">
    <link rel="stylesheet" href=" /css/changepassword.css">
</head>

<body>
    <div class="modal-wrap">
        <div class="modal-background"></div>
        <div class="main">
            <form method="POST" action="/auth/resetpassword" class="form" id="form-1">
                <div class="auth-form__header">
                    <h3 class="auth-form__heading signin">
                        Thay đổi mật khẩu
                    </h3>
                </div>

                <div class="content">
                    <img src="/img/reset_password.jpg" alt="">

                    <div class="press-pass active">
                        <div class="form-group">
                            <label  class="form-label">Mật khẩu cho tài khoản : <span>{{email}}</span></label>
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Mật khẩu mới</label>
                            <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">
                            <span class="form-message"></span>
                        </div>
                        <div class="form-group">
                            <label for="password_confirmation" class="form-label">Nhập lại mật khẩu mới</label>
                            <input id="password_confirmation" name="newpassword" placeholder="Nhập lại mật khẩu" type="password" class="form-control">
                            <span class="form-message"></span>
                        </div>
                        <button type="submit" class="btn-send form-submit">Xác nhận</button>
                    </div>
                </div>

                <a href="/" class="modal-logo">
                    <img loading="lazy" src="/img/logo_has_color.png" alt="This is LOGO">
                    <span>Về trang chủ</span>
                </a>
            </form>
        </div>
    </div>
    <script src="/js/validator.js"></script>

    <script>
        //Output expect
        Validator({
            form: '#form-1',
            formGroupSelector: '.form-group',
            rules: [
                Validator.isRequired('#password', 'Vui lòng không bỏ trống trường này'),
                Validator.minLength('#password', 6),
                Validator.isRequired('#password_confirmation', 'Vui lòng không bỏ trống trường này'),
                Validator.isConfirm('#password_confirmation', function() {
                    return document.querySelector('#form-1 #password').value;
                }, 'Mật khẩu không trùng khớp'),
            ],
        });
    </script>

</body>

</html>