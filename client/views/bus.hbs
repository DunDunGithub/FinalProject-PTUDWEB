<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Take It!</title>
    <link rel="icon" href=" /img/logo_has_color.png" type="image/x-icon">
    <link rel="stylesheet" href=" /css/base.css">
    <link rel="stylesheet" href=" /css/styles.css">
    <link rel="stylesheet" href=" /css/reset.css">
    <link rel="stylesheet" href=" /css/slider.css">
    <link rel="stylesheet" href=" /css/home.css">
    <link rel="stylesheet" href=" /css/buyTicket.css">
    <link rel="stylesheet" href=" /css/queries.css">
    <link rel="stylesheet" href=" /css/mobile.css">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/6501cf2109.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>
    <div class="app">
        <!-- Header -->
        {{>header}}

        <!-- Body -->
        <div id="body">
            <!-- Slider -->
            <div class="body__slideshow-container">
                <!-- <div class="body__slideshow">
                    <div class="body__slideshow-background">
                        <img loading="lazy" class="body__slideshow-background--img" src=" /img/home_1.png" alt="">
                    </div>
                    <div class="body__slideshow-logo">
                        <img loading="lazy" src=" /img/logo_not_color.png" alt="">
                    </div>
                </div> -->

                <!-- Carousel -->
                <div id="demo" class="carousel slide" data-bs-ride="carousel">

                    <!-- Indicators/dots -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
                    </div>

                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src=" /img/home_1.png" alt="Los Angeles" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_2.png" alt="Chicago" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_3.png" alt="New York" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_4.png" alt="New York" class="d-block w-100">
                        </div>
                        <div class="body__slideshow-logo">
                            <img loading="lazy" src=" /img/logo_not_color.png" alt="">
                        </div>
                    </div>

                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>

            <!-- Search Ticket -->
             <div class="search__ticket">
                <form method="GET" action="/bus"  class="container">
                    <h5 class="search__ticket-header">Search Ticket</h5>
                    <div class="search__ticket-choose-wrap">

                        <div class="search__ticket-choose-direction">
                            <div class="search__ticket-wrap-item">
                                <img src=" /img/mini_icon_location.png" alt="" class="search__ticket-choose-img">
                                <select name="tinhbatdau" required class="search__ticket-choose" id="tinhbatdau">
                                    <option value="">Your location</option>
                                    {{#each tinhthanh}}
                                    <option value="{{matinh}}">{{tentinh}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            <img src=" /img/mini_icon_direction.png" alt="">
                            <div class="search__ticket-wrap-item">
                                <img src=" /img/mini_icon_destination.png" alt="" class="search__ticket-choose-img">
                                <select name="tinhketthuc" required class="search__ticket-choose" id="tinhketthuc">
                                    <option value="">Your destination</option>
                                    {{#each tinhthanh}}
                                    <option value="{{matinh}}">{{tentinh}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <div class="search__ticket-wrap-item">
                            <img src=" /img/mini_icon_date.png" alt="" class="search__ticket-choose-img">
                            <input type="date" id="date" name="date" class="search__ticket-choose">

                            </input>
                        </div>
                    </div>
                    <div class="search__ticket-submit">
                        <button type="submit" class="btn-base btn-search__ticket">
                            Search
                        </button>

                    </div>
                </form>
            </div>


            <!-- Available Ticket -->
            <!-- Bỏ class disabled để hiện các vé search theo yêu cầu -->
             <div class="availableTicket-container">
                <div class="container">
                    <div class="availableTicket-header">
                        <div class="availableTicket-header-title">Available Ticket</div>
                        <div class="availableTicket-header-choose">
                            <div class="availableTicket-header-choose__filter">
                                Filter
                                <i class="fa-solid fa-filter"></i>
                            </div>
                            <div class="availableTicket-header-choose__sort">
                                Sort by
                                <i class="fa-solid fa-sort"></i>
                                <div class="availableTicket-location-list">
                                    <div class="availableTicket__sort-list asc">
                                        Giá tăng dần
                                    </div>
                                    <div class="availableTicket__sort-list desc">
                                        Giá giảm dần
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{#each chuyenxe}}
                    <div class="ticket__information">
                        <div class="ticket__information-summary row">
                            <div class="ticket__information-content col-md-8">
                                <div class="row">
                                    <div class="ticket__information-description col-md-8">
                                        <div class="ticket__car">
                                            <div class="ticket__car-name">{{tennhaxe}}</div>
                                            <div class="ticket__car-rate">
                                                <i class="fa-solid fa-star"></i>
                                                <span>{{formatRating diemso}} (B55)</span>
                                            </div>
                                        </div>
                                        <div class="ticket__car-type">{{tenloaixe}}</div>
                                        <div class="ticket__car-depart">
                                            <i class="fa-solid fa-location-dot"></i>
                                            <span class="ticket__car-depart-time">{{formatHours tgkhoihanh}}</span>
                                            <span class="ticket__car-depart-location">{{tendiachikhoihanh}}</span>
                                        </div>
                                        <div class="ticket__car-depart-period">{{calculateTime tgkhoihanh tgketthuc}}h
                                        </div>
                                        <div class="ticket__car-arrive">
                                            <i class="fa-solid fa-location-dot"></i>
                                            <span class="ticket__car-arrive-time">{{formatHours tgketthuc}}</span>
                                            <span class="ticket__car-arrive-location">{{tendiachiketthuc}}</span>
                                        </div>
                                    </div>
                                    <div class="ticket__information-price col-md-4">
                                        <div class="ticket-wrap-price">
                                            <span class="ticket-price">Từ {{formatMoney giavenhonhat}} đ</span>
                                            <a class="ticket-price__more">More information</a>
                                        </div>

                                        <div class="ticket-wrap-buy">
                                            <span class="ticket-left">{{choconlai}} slots left</span>
                                            <span class="btn-base ticket-buy">Buy</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ticket__information-img col-md-4">
                                <img src="{{hinhanhxe}}" alt="">
                            </div>
                        </div>

                        <!-- Xử lí trong JavaScript! -->
                        <div class="ticket__information-details">
                            <div class="ticket__information-details-heading">
                                <div class="ticket__information-details-heading-item active">
                                    <i class="fa-solid fa-image"></i> Image
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-map-location-dot"></i> Route
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-building-shield"></i> Policy
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-star"></i> Rate
                                </div>
                                <div class="line"></div>
                            </div>
                            <!-- Content -->
                            <div class="image-detail content-detail active">
                                <div class="image-heading">
                                    <h3>Thành Bưởi</h3>
                                    <p>Hotline: <a href="tel:+0918919189">0918 91 91 89</a></p>
                                </div>
                                <div class="image-content">
                                    <div class="image-content-mainImage">
                                        <img src="{{hinhanhxe}}" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="route-detail content-detail">
                                <div class="route-detail__note">
                                    <p><span>Note:</span> <br>The pick-up and drop-off times below are estimated times.
                                        <br>This schedule is subject to change depending on the actual situation.
                                    </p>
                                </div>
                                <div class="route-detail__PickUp">
                                    <div class="route-detail__PickUp--heading">
                                        <i class="fa-solid fa-location-dot"></i> Pick Up Location
                                    </div>
                                    <div class="route-detail__PickUp--content">
                                        3

                                        <div class="route-detail__PickUp">
                                            <span class="route-detail__time">{{formatHours tgkhoihanh}}</span>
                                            <span class="route-detail__location"> - {{tendiachikhoihanh}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="route-detail__DropOff">
                                    <div class="route-detail__DropOff--heading">
                                        <i class="fa-solid fa-location-dot"></i> Drop off Location
                                    </div>
                                    <div class="route-detail__DropOff--content">
                                        <div class="route-detail__DropOff">
                                            <span class="route-detail__time">{{formatHours tgketthuc}}</span>
                                            <span class="route-detail__location"> - {{tendiachiketthuc}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="policy-detail content-detail">
                                <div class="policy-detail-Cancellation">
                                    <h4>Cancellation Policy</h4>
                                    <div class="policy-detail-Cancellation-time">
                                        07:00 06/11/2022
                                    </div>
                                    <div class="policy-detail-Cancellation-timeLine">
                                        <div class="policy-detail-Cancellation-timeLine--part">
                                            Không mất phí
                                        </div>
                                        <div class="policy-detail-Cancellation-timeLine--part">
                                            Mất phí
                                        </div>
                                    </div>
                                </div>
                                <div class="policy-detail-note">
                                    <h4>Note:</h4>
                                    <ul class="policy-detail-garage-item__content">
                                        <li>Cancellation fees will be charged on the original price, without discounting
                                            promotions or discounts; at the same time not exceed the amount you have
                                            paid.</li>
                                    </ul>
                                </div>
                                <div class="policy-detail-garage">
                                    {{mota}}
                                </div>
                            </div>
                            <div class="rate-detail content-detail">
                                <div class="rate-detail__heading">
                                    <div class="rate-detail__heading-averageRate">
                                        <i class="fa-solid fa-star"></i>
                                        <span class="">{{formatRating diemso}} (855)</span>
                                    </div>
                                    <div class="rate-detail__heading-fiveStarRate">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                    </div>
                                </div>
                                <div class="rate-detail__userComment">
                                    <ul class="rate-detail__userComment-list">
                                        {{#each danhgia}}
                                        <li class="rate-detail__userComment-item">
                                            <i class="fa-solid fa-user"></i>
                                            <div class="rate-detail__userComment-wrap">
                                                <div class="rate-detail__userComment-info">
                                                    <div class="rate-detail__userComment-name">{{tenkhachhang}}</div>
                                                    <div class="rate-detail__userComment-rate">
                                                        {{{formatStar diemso}}}
                                                        {{!-- <i class="fa-solid fa-star"></i>
                                                        <i class="fa-solid fa-star"></i>
                                                        <i class="fa-solid fa-star"></i>
                                                        <i class="fa-solid fa-star"></i>
                                                        <i class="fa-solid fa-star"></i> --}}
                                                    </div>
                                                </div>
                                                <div class="rate-detail__userComment-comment">
                                                    {{binhluan}}
                                                </div>
                                            </div>
                                        </li>
                                         {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{/each}}
                   

                   
                    <i class="more-ticket-down fa-solid fa-angles-down"></i>
                </div>
            </div>


            <!-- Footer -->
            {{>footer}}
        </div>

        <!-- Filter -->
         <div class="filter-wrap">
            <div class="filter__overlay">
            </div>
            <div class="filter__body">
                <div class="filter__header">
                    <h2>Filters</h2>
                    <span>
                    Clear all
                    <i class="fa-solid fa-xmark"></i>
                </span>

                </div>
                <div class="container">
                    <div class="filter__applied">
                        <h3>Applied Filters</h3>
                        <div class="filter__applied-list"></div>
                    </div>
                    <div class="filter__departureTime">
                        <h3>Departure time</h3>
                        <div class="filter__departureTime-list">
                            <div class="filter__departureTime-item">
                                <div class="filter__departureTime-title">Early Morning (200)</div>
                                <div class="filter__departureTime-time">00:00 - 06:00</div>
                            </div>
                            <div class="filter__departureTime-item">
                                <div class="filter__departureTime-title">Morning (250)</div>
                                <div class="filter__departureTime-time">06:01 - 12:00</div>
                            </div>
                            <div class="filter__departureTime-item">
                                <div class="filter__departureTime-title">Afternoon (204)</div>
                                <div class="filter__departureTime-time">12:01 - 18:00</div>
                            </div>
                            <div class="filter__departureTime-item">
                                <div class="filter__departureTime-title">Evening (173)</div>
                                <div class="filter__departureTime-time">18:01 - 23:59</div>
                            </div>
                        </div>
                    </div>

                    <div class="filter__departureSlider">
                        <h3>Price</h3>
                        <div class="slidecontainer">
                            <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                            <p>Value: <span id="demo_range"></span>.000 VNĐ</p>
                        </div>
                    </div>

                    <div class="filter__departurePosition">
                        <h3>Position of seats</h3>
                        <div class="filter__departurePosition-list">
                            <label for="name">
                            <input type="checkbox" value="front" id="front" name="front">
                            Front
                        </label>
                            <label for="name">
                            <input type="checkbox" value="middle" id="middle" name="middle">
                            Middle
                        </label>
                            <label for="name">
                            <input type="checkbox" value="back" id="back" name="back">
                            Back
                        </label>
                        </div>
                    </div>

                    <div class="filter__departureGarage">
                        <h3>Garage</h3>
                        <div class="filter__departureGarage-list list-item">
                            <input class="filter__departureGarage-item" type="text" placeholder="Search">
                            <label for="name">
                            <input class="filter__departureGarage-item" type="checkbox" value="hoamai" id="hoamai" name="hoamai">
                            Hoa Mai <span class="garage-quantity">(25)</span>
                        </label>
                            <label for="name">
                            <input class="filter__departureGarage-item" type="checkbox" value="thienphu" id="thienphu" name="thienphu">
                            Thiên Phú <span class="garage-quantity">(1)</span>
                        </label>
                            <label for="name">
                            <input class="filter__departureGarage-item" type="checkbox" value="vielimousine" id="vielimousine" name="vielimousine">
                            Vie Limousine <span class="garage-quantity">(6)</span>
                        </label>
                        </div>
                    </div>

                    <div class="filter__departurePickupLocation">
                        <h3>Pick up Location</h3>
                        <div class="filter__departurePickupLocation-list list-item">
                            <input class="filter__departurePickupLocation-item" type="text" placeholder="Search">
                            <label for="name">
                            <input class="filter__departurePickupLocation-item" type="checkbox" value="hoamai" id="hoamai" name="hoamai">
                            Quận 1
                        </label>
                            <label for="name">
                            <input class="filter__departurePickupLocation-item" type="checkbox" value="thienphu" id="thienphu" name="thienphu">
                            Quận 2
                        </label>
                            <label for="name">
                            <input class="filter__departurePickupLocation-item" type="checkbox" value="vielimousine" id="vielimousine" name="vielimousine">
                            Quận 5
                        </label>
                        </div>
                    </div>

                    <div class="filter__departureDropOffLocation">
                        <h3>Pick up Location</h3>
                        <div class="filter__departureDropOffLocation-list list-item">
                            <input class="filter__departureDropOffLocation-item" type="text" placeholder="Search">
                            <label for="name">
                            <input class="filter__departureDropOffLocation-item" type="checkbox" value="hoamai" id="hoamai" name="hoamai">
                            Vũng Tàu
                        </label>
                            <label for="name">
                            <input class="filter__departureDropOffLocation-item" type="checkbox" value="thienphu" id="thienphu" name="thienphu">
                            Bà Rịa
                        </label>
                            <label for="name">
                            <input class="filter__departureDropOffLocation-item" type="checkbox" value="vielimousine" id="vielimousine" name="vielimousine">
                            Đà Lạt
                        </label>
                        </div>
                    </div>

                    <div class="filter__departureVehical">
                        <h3>Pick up Location</h3>
                        <div class="filter__departureVehical-list list-item">
                            <input class="filter__departureVehical-item" type="text" placeholder="Search">
                            <label for="name">
                            <input class="filter__departureVehical-item" type="checkbox" value="hoamai" id="hoamai" name="hoamai">
                            Seat
                        </label>
                            <label for="name">
                            <input class="filter__departureVehical-item" type="checkbox" value="thienphu" id="thienphu" name="thienphu">
                            Bed
                        </label>
                            <label for="name">
                            <input class="filter__departureVehical-item" type="checkbox" value="vielimousine" id="vielimousine" name="vielimousine">
                            Limousine
                        </label>
                        </div>
                    </div>

                    <div class="filter__departureNumberOfSeat">
                        <h3>Number of seats</h3>
                        <div class="filter__departureNumberOfSeat--choose">
                            <span class="down">-</span>
                            <span class="quantity">2</span>
                            <span class="up">+</span>
                        </div>
                    </div>

                    <button class="filter__apply">
                    Apply
                    <i class="fa-solid fa-arrow-right-long"></i>
                </button>

                </div>
            </div>
        </div>

        <!-- Modal layout -->
           <div class="modal-wrap">
            <div class="modal__overlay">
            </div>

            <div class="modal__body">
                <!-- Seat form -->
                <div class="seat-form bg-white">
                    <header class="seat-form__header">
                        <div class="seat-form__step seat-form__step--active" id="seat-form__step--choose-seat">
                            <img src=" /img/number_1.png" alt="buoc1" class="seat-form__number_img"> Vị trí ghế ngồi
                        </div>
                        <div class="seat-form__step" id="seat-form__step--pick-location">
                            <img src=" /img/number_2.png" alt="buoc2" class="seat-form__number_img"> Vị trí đón/trả khách
                        </div>
                        <div class="seat-form__step" id="seat-form__step--your-seat">
                            <img src=" /img/number_3.png" alt="buoc3" class="seat-form__number_img"> Nhập thông tin
                        </div>
                    </header>
                    <hr style="margin:0">

                    <div class="seat-form__container modal__container-form active">
                        <div class="seat-form__note mt-5 mb-5">
                            <h4 class="mb-5">Chú thích: </h4>
                            <div class="seat-form__seat mb-4">
                                <img class="seat-form__seat-img" src=" /img/empty_seat.png" alt="empty_seat">
                                <span class="seat-form__seat-condition">Còn trống</span>
                            </div>
                            <div class="seat-form__seat mb-4">
                                <img class="seat-form__seat-img" src=" /img/notsale_seat.png" alt="empty_seat">
                                <span class="seat-form__seat-condition">Ghế không bán</span>
                            </div>
                            <div class="seat-form__seat">
                                <img class="seat-form__seat-img" src=" /img/choice_seat.png" alt="empty_seat">
                                <span class="seat-form__seat-condition">Đang chọn</span>
                            </div>
                        </div>

                        <div class="seat-form__seat-place mt-5 mb-5">
                            <table>
                                <tbody>
                                    <tr class="coach-row">
                                        <td>
                                            <div class="coach-row__seat">
                                                <img class="driver-seat" src=" /img/volant.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat">
                                                <img class="notsale_seat" src=" /img/notsale_seat.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat">
                                                <img class="notsale_seat" src=" /img/notsale_seat.png" alt="">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="coach-row">
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '1A', 300000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '2A', 300000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '3A', 300000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr class="coach-row">
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '4A', 250000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '5A', 250000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="coach-row__seat" onclick="chonghe1(event, '6A', 250000)">
                                                <img class="empty_seat" src=" /img/empty_seat.png" alt="">
                                            </div>
                                        </td>
                                    </tr>
