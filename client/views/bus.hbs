                <!-- Carousel -->
                <div id="demo" class="carousel slide" data-bs-ride="carousel">

                    <!-- Indicators/dots -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="3"></button>
                    </div>

                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src=" /img/home_1.png" alt="Los Angeles" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_2.png" alt="Chicago" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_3.png" alt="New York" class="d-block w-100">
                        </div>
                        <div class="carousel-item">
                            <img src=" /img/home_4.png" alt="New York" class="d-block w-100">
                        </div>
                        <div class="body__slideshow-logo">
                            <img loading="lazy" src=" /img/logo_not_color.png" alt="">
                        </div>
                    </div>

                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>

            <!-- Search Ticket -->
            <div class="search__ticket">
                <form method="GET" action="/bus" class="container">
                    <h5 class="search__ticket-header">Tìm kiếm vé</h5>
                    <div class="search__ticket-choose-wrap">

                        <div class="search__ticket-choose-direction">
                            <div class="search__ticket-wrap-item">
                                <img src=" /img/mini_icon_location.png" alt="" class="search__ticket-choose-img">
                                <select name="tinhbatdau" class="search__ticket-choose" id="tinhbatdau">
                                    <option value="">Nơi xuất phát</option>
                                    {{#each tinhthanh}}
                                    <option value="{{matinh}}">{{tentinh}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            <img src=" /img/mini_icon_direction.png" alt="">
                            <div class="search__ticket-wrap-item">
                                <img src=" /img/mini_icon_destination.png" alt="" class="search__ticket-choose-img">
                                <select name="tinhketthuc" class="search__ticket-choose" id="tinhketthuc">
                                    <option value="">Nơi đến</option>
                                    {{#each tinhthanh}}
                                    <option value="{{matinh}}">{{tentinh}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>

                        <div class="search__ticket-wrap-item">
                            <img src=" /img/mini_icon_date.png" alt="" class="search__ticket-choose-img">
                            <input type="date" id="date" name="date" class="search__ticket-choose">

                            </input>
                        </div>
                    </div>
                    <div class="search__ticket-submit">
                        <button type="submit" class="btn-base btn-search__ticket">
                            Tìm kiếm
                        </button>

                    </div>
                </form>
            </div>


            <!-- Available Ticket -->
            <!-- Bỏ class disabled để hiện các vé search theo yêu cầu -->
            <div class="availableTicket-container">
                <div class="container">
                    <div class="availableTicket-header">
                        <div class="availableTicket-header-title">Vé có sẵn</div>
                        <div class="availableTicket-header-choose">
                            <div class="availableTicket-header-choose__filter">
                                Bộ lọc
                                <i class="fa-solid fa-filter"></i>
                            </div>
                            <div class="availableTicket-header-choose__sort">
                                Sắp xếp theo
                                <i class="fa-solid fa-sort"></i>
                                <div class="availableTicket-location-list">
                                    <div class="availableTicket__sort-list asc">
                                        Giá tăng dần
                                    </div>
                                    <div class="availableTicket__sort-list desc">
                                        Giá giảm dần
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{#each chuyenxe}}
                    {{#if this}}
                        <div class="ticket__information">
                        <div class="ticket__information-summary row">
                            <div class="ticket__information-content col-md-8">
                                <div class="row">
                                    <div class="ticket__information-description col-md-8">
                                        <div class="ticket__car">
                                            <div class="ticket__car-name">{{tennhaxe}}</div>
                                            <div class="ticket__car-rate">
                                                <i class="fa-solid fa-star"></i>
                                                <span>{{formatRating diemso}} (B55)</span>
                                            </div>
                                        </div>
                                        <div class="ticket__car-type">{{tenloaixe}}</div>
                                        <div class="ticket__car-depart">
                                            <i class="fa-solid fa-location-dot"></i>
                                            <span class="ticket__car-depart-time">{{formatHours tgkhoihanh}}</span>
                                            <span class="ticket__car-depart-location">{{tendiachikhoihanh}}</span>
                                        </div>
                                        <div class="ticket__car-depart-period">{{calculateTime tgkhoihanh tgketthuc}}h
                                        </div>
                                        <div class="ticket__car-arrive">
                                            <i class="fa-solid fa-location-dot"></i>
                                            <span class="ticket__car-arrive-time">{{formatHours tgketthuc}}</span>
                                            <span class="ticket__car-arrive-location">{{tendiachiketthuc}}</span>
                                        </div>
                                    </div>
                                    <div class="ticket__information-price col-md-4">
                                        <div class="ticket-wrap-price">
                                            <span class="ticket-price">Từ {{formatMoney giavenhonhat}} đ</span>
                                            <a class="ticket-price__more">Thông tin chi tiết</a>
                                        </div>

                                        <div class="ticket-wrap-buy">
                                            <span class="ticket-left">Còn {{slotLeft}} chỗ trống</span>
                                            <span class="btn-base ticket-buy" onclick="renderBuyTicketModal(event,'{{machuyenxe}}',
                                            '{{maloaixe}}','{{mabatdau}}','{{maketthuc}}',
                                            '{{formatHoursDay tgkhoihanh}}','{{formatHoursDay tgketthuc}}')">Mua vé</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="ticket__information-img col-md-4">
                                <img src="{{hinhanhxe}}" alt="">
                            </div>
                        </div>

                        <!-- Xử lí trong JavaScript! -->
                        <div class="ticket__information-details">
                            <div class="ticket__information-details-heading">
                                <div class="ticket__information-details-heading-item active">
                                    <i class="fa-solid fa-image"></i> Hình ảnh
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-map-location-dot"></i> Tuyến đường
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-building-shield"></i> Chính sách
                                </div>
                                <div class="ticket__information-details-heading-item">
                                    <i class="fa-solid fa-star"></i> Đánh giá
                                </div>
                                <div class="line"></div>
                            </div>
                            <!-- Content -->
                            <div class="image-detail content-detail active">
                                <div class="image-heading">
                                    <h3>Thành Bưởi</h3>
                                    <p>Hotline: <a href="tel:+0918919189">0918 91 91 89</a></p>
                                </div>
                                <div class="image-content">
                                    <div class="image-content-mainImage">
                                        <img src="{{hinhanhxe}}" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="route-detail content-detail">
                                <div class="route-detail__note">
                                    <p><span>Chú ý:</span> <br>Thời gian đón và trả khách dưới đây là thời gian ước tính.
                                        <br>Lịch trình này có thể thay đổi tùy theo tình hình thực tế.
                                    </p>
                                </div>
                                <div class="route-detail__PickUp">
                                    <div class="route-detail__PickUp--heading">
                                        <i class="fa-solid fa-location-dot"></i> Điểm đón
                                    </div>
                                    <div class="route-detail__PickUp--content">
                                        

                                        <div class="route-detail__PickUp">
                                            <span class="route-detail__time">{{formatHoursDay tgkhoihanh}}</span>
                                            <span class="route-detail__location"> - {{tendiachikhoihanh}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="route-detail__DropOff">
                                    <div class="route-detail__DropOff--heading">
                                        <i class="fa-solid fa-location-dot"></i> Điểm trả
                                    </div>
                                    <div class="route-detail__DropOff--content">
                                        <div class="route-detail__DropOff">
                                            <span class="route-detail__time">{{formatHoursDay tgketthuc}}</span>
                                            <span class="route-detail__location"> - {{tendiachiketthuc}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="policy-detail content-detail">
                                <div class="policy-detail-Cancellation">
                                    <h4>Chính sách hủy</h4>
                                    <div class="policy-detail-Cancellation-time">
                                        07:00 06/11/2022
                                    </div>
                                    <div class="policy-detail-Cancellation-timeLine">
                                        <div class="policy-detail-Cancellation-timeLine--part">
                                            Không mất phí
                                        </div>
                                        <div class="policy-detail-Cancellation-timeLine--part">
                                            Mất phí
                                        </div>
                                    </div>
                                </div>
                                <div class="policy-detail-note">
                                    <h4>Chú ý:</h4>
                                    <ul class="policy-detail-garage-item__content">
                                        <li>Phí hủy sẽ được tính trên giá gốc, không chiết khấu
                                            khuyến mãi hoặc giảm giá; đồng thời không vượt quá số tiền bạn có
                                            trả.</li>
                                    </ul>
                                </div>
                                <div class="policy-detail-garage">
                                    {{{mota}}}
                                </div>
                            </div>
                            <div class="rate-detail content-detail">
                                <div class="rate-detail__heading">
                                    <div class="rate-detail__heading-averageRate">
                                        <i class="fa-solid fa-star"></i>
                                        <span class="">{{formatRating diemso}} (855)</span>
                                    </div>
                                    <div class="rate-detail__heading-fiveStarRate">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                    </div>
                                </div>
                                <div class="rate-detail__userComment">
                                    <ul class="rate-detail__userComment-list">
                                        {{#each danhgia}}
                                        <li class="rate-detail__userComment-item">
                                            <i class="fa-solid fa-user"></i>
                                            <div class="rate-detail__userComment-wrap">
                                                <div class="rate-detail__userComment-info">
                                                    <div class="rate-detail__userComment-name">{{tenkhachhang}}</div>
                                                    <div class="rate-detail__userComment-rate">
                                                        {{{formatStar diemso}}}
                                                        
                                                    </div>
                                                </div>
                                                <div class="rate-detail__userComment-comment">
                                                    {{binhluan}}
                                                </div>
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/if}}

                    {{/each}}


                    <nav aria-label="Page navigation example mt-5">
                        {{{createPagination pagination paginationClass="pagination justify-content-center mt-5" leftText="&laquo;" rightText="&raquo;" limit=5}}}


                        {{!-- <ul class="pagination justify-content-center mt-5">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
