                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul> --}}
                    </nav>
                   
                </div>
            </div>


            <!-- Footer -->
            {{>footer}}
        </div>

        <!-- Filter -->
        <div class="filter-wrap">
            <div class="filter__overlay">
            </div>
            <div class="filter__body">
                <div class="filter__header">
                    <h3>Bộ lọc</h3>
                    <span id="clear-filter">
                        Xóa tất cả
                    <i class="fa-solid fa-xmark"></i>
                    </span>

                </div>
              
                

                <div class="container" >
                    <div class="filter__departureTime">
                        <h3>Giờ khởi hành</h3>
                        <div class="radio-toolbar">
                            <input type="radio" id="radio1" name="time" value="earlymorning">
                            <label for="radio1">00:00 - 06:00</label>
                            <input type="radio" id="radio2" name="time" value="morning">
                            <label for="radio2">06:00 - 12:00</label>
                            <input type="radio" id="radio3" name="time" value="afternoon">
                            <label for="radio3">12:00 - 18:00</label>
                            <input type="radio" id="radio4" name="time" value="evening">
                            <label for="radio4">18:00 - 24:00</label>
                        </div>

                    </div>

                    <div class="filter__departureSlider">
                        <h3>Giá</h3>
                        <div class="slidecontainer">
                            <input type="range" min="100" max="900" value="500" class="slider" id="myRange">
                            <p>Từ: <span id="demo_range"></span>.000 VNĐ</p>
                        </div>
                    </div>


                    <div class="filter__departureGarage">
                        <h3>Nhà xe</h3>
                        <div class="filter__departureGarage-list list-item" >
                            <input id="garage-search" class="filter__departureGarage-item" type="text" placeholder="Search" onkeyup="instantSearch('.garage-item','garage-search')">
                            {{#each nhaxe}}
                               <label class="garage-item" for="{{manhaxe}}">
                                <input class="filter__departureGarage-item " type="checkbox" value="{{tennhaxe}}" id="{{manhaxe}}" name="tennhaxe">
                                    {{tennhaxe}} 
                                </label>
                            {{/each}}
                        </div>
                    </div>

                    <div class="filter__departurePickupLocation">
                        <h3>Điểm đón</h3>
                        <div class="filter__departurePickupLocation-list list-item">
                            <input id="departure-search" class="filter__departurePickupLocation-item" type="text" placeholder="Search" onkeyup="instantSearch('.departure-item','departure-search')">
                            {{#each diachi}}
                               <label class="departure-item" for="{{madiachi}}kh">
                                    <input class="filter__departurePickupLocation-item " type="checkbox" value="{{madiachi}}" id="{{madiachi}}kh" name="diemkhoihanh">
                                    {{tendiachi}}
                                </label>
                            {{/each}}
                        </div>
                    </div>

                    <div class="filter__departureDropOffLocation">
                        <h3>Điểm trả</h3>
                        <div class="filter__departureDropOffLocation-list list-item">
                            <input id="arrival-search" class="filter__departureDropOffLocation-item" type="text" placeholder="Search" onkeyup="instantSearch('.arrival-item','arrival-search')">
                            {{#each diachi}}
                               <label class="arrival-item" for="{{madiachi}}kt">
                                    <input class="filter__departurePickupLocation-item " type="checkbox" value="{{madiachi}}" id="{{madiachi}}kt" name="diemketthuc">
                                    {{tendiachi}}
                                </label>
                            {{/each}}
                        </div>
                    </div>

                    <div class="filter__departureDropOffLocation">
                        <h3>Loại xe</h3>
                        <div class="filter__departureDropOffLocation-list list-item">
                            <input id="type-search" class="filter__departureDropOffLocation-item" type="text" placeholder="Search" onkeyup="instantSearch('.type-item','type-search')">
                            {{#each loaixe}}
                                <label class="type-item" for="{{maloaixe}}">
                                        <input class="filter__departurePickupLocation-item " type="checkbox" value="{{maloaixe}}" id="{{maloaixe}}" name="maloaixe">
                                        {{tenloaixe}}
                                    </label>
                            {{/each}}
                        </div>
                    </div>

                    <div class="filter__departureNumberOfSeat">
                        <h3>Số lượng ghế</h3>
                        <div class="filter__departureNumberOfSeat--choose">
                            <span class="down">-</span>
                            <input type="number" name="slot" id="slot" value="1" hidden>
                            <span class="quantity">2</span>
                            <span class="up">+</span>
                        </div>
                    </div>

                    <button id="apply-btn" class="filter__apply">
                            Áp dụng
                        <i class="fa-solid fa-arrow-right-long"></i>
                    </button>

                </div>
            </div>
        </div>

