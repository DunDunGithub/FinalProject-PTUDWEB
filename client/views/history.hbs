<body>
    <div class="app">
        <!-- Header -->
        {{>header name=user.tenkhachhang}}

        <div id="body" class="history">
            <!-- Available Ticket -->
            <div class="availableTicket-container">
                <div class="container">
                    <div class="availableTicket-header">
                        <div class="availableTicket-header-title">History</div>
                    </div>
                    <ul class="ticket__information-list">
                        {{#each vexe}}
                           <li class="ticket__information ">
                            <div class="ticket__information-summary row">
                                <div class="ticket__information-content col-xl-9">
                                    <div class="row">
                                        <div class="ticket__information-description col-xl-5">
                                            <div class="ticket__car">
                                                <div class="ticket__car-name">{{tennhaxe}}</div>
                                                <div class="ticket__car-rate">
                                                    <span>{{tinhtrang}}</span>
                                                </div>
                                                <button type="submit" class="ticket__information_btn btn-rate" onclick="renderRateBus(event,'{{manhaxe}}')">Rate</button>
                                            </div>
                                            <div class="ticket__car-type">{{tenloaixe}}</div>
                                            <div class="ticket__car-depart">
                                                <i class="fa-solid fa-location-dot"></i>
                                                <span class="ticket__car-depart-time">{{formatHours tgkhoihanh}}</span>
                                                <span class="ticket__car-depart-location">{{diachibatdau}}</span>
                                            </div>
                                            <div class="ticket__car-depart-period">{{calculateTime tgkhoihanh tgketthuc}}h</div>
                                            <div class="ticket__car-arrive">
                                                <i class="fa-solid fa-location-dot"></i>
                                                <span class="ticket__car-arrive-time">{{formatHours tgketthuc}}</span>
                                                <span class="ticket__car-arrive-location">{{diachiketthuc}}</span>
                                            </div>
                                        </div>
                                        <div class="ticket__information-price col-xl-4">
                                            <div class="ticket__information-price-heading" style="font-size: 1.25rem;">Ghế đặt: </div>
                                            <div class="ticket__information-price-detail" style="font-size: 1.25rem;">{{slots}}</div>
                                          
                                        </div>
                                        <div class="ticket__information-price col-xl-3">
                                            <div class="ticket__information-price-heading">Total:</div>
                                            <div class="ticket__information-price-detail">{{formatMoney tongtien}}<span>đ</span></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="ticket__information-img col-xl-3">
                                    <img src=" {{hinhanhxe}}" alt="">
                                </div>
                            </div>
                        </li>
